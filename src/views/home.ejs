    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $('#mailform').submit((e) => {
            e.preventDefault()
            $.ajax({
                url: '/mail',
                method: 'POST',
                data: {
                    name: $('#name').val(),
                    wname: $('#wname').val(),
                    email: $('#email').val(),
                    // message: $('#message').val(),
                },
                success: (response) => {
                    console.log(response);
                    if (response.success) {
                        alert("Mail Sent Successfully to " + response.name);
                        location.reload();
                    } else {
                        alert("Failed to Sent Mail");
                        location.reload();
                    }
                },
                error: (response) => {
                    alert("Try Again");
                }

            })

        })
    </script>
</body>

</html>